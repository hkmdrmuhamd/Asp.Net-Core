@model List<Course>

<div class="container mt-3">
    <main>
        @for (int i = 0; i < Model.Count; i++)
        {
            @if(@Model[i].isActive){
                @await Html.PartialAsync("_Card", @Model[i])
            }
        }
    </main>
</div>
